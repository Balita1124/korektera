<% provide(:title, 'Se connecter') %>


<div class="devise-login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email,:class=>"devise-login-label" %>
      <%= f.email_field :email, autofocus: true,:class=>"devise-login-input-text" %>
      <%= f.label :password,:class=>"devise-login-label" %>
      <%= f.password_field :password, autocomplete: "off" ,:class=>"devise-login-input-text" %>
      <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me ,:style=>"display:inline-block,padding-top:2px,color:#5bf0ff"%>
          <%= f.label "Garder ma session active",:style=>"display:inline-block;color: #07697c;padding-bottom:2px" %>
      <% end %>
      <%= f.submit "Se connecter",:class=>"devise-login-btn" %>
  <% end %>
</div>
