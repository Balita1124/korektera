<div class="row">
  <div class="col-lg-3 col-md-3 hidden-sm hidden-xs"></div>
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><h4>Session du <%= @sess.updated_at.strftime("%m %b %Y")  %></h4></div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center" style="margin-top: 25px;">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-left">
          <span style="display: block;margin-bottom: 15px; font-weight: bold;"><%= @historiques.count %>
            dernier(s)</span>
          <table class="table table-responsive table-bordered">
            <tr>
              <th>Action</th>
              <th>Projet</th>
              <th>Correction</th>
              <th>Date</th>
            </tr>
            <% @historiques.each do |historique| %>
                <tr>
                  <td><%= historique.action %></td>
                  <td><%= project_name(historique.project) %></td>
                  <td><%= historique.correction %></td>
                  <td><%= historique.updated_at.strftime("%d %b %Y Ã  %Hh %M")  %></td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-md-3 hidden-sm hidden-xs"></div>
</div>
</div>