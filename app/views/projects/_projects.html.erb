<div class="row" >
  <div class="col-lg-12 text-left">
    <h3>Projets</h3>
  </div>
  <div class="col-lg-12 text-left">
    <div class="row">
      <% @projects.each do |project| %>
          <div class="col-lg-12" style="margin-top: 15px;">
            <%= link_to project.name.upcase, project,remote: :true, :class => "btn btn-default btn-lg col-lg-12", style: "outline:none" %>
          </div>
      <% end %>
    </div>
  </div>
</div>