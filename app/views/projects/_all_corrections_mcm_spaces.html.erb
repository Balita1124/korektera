<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-lg-12 text-right" style="margin-top: 25px; min-height: 400px">
    <div class="row">
      <%= form_for @correction, remote: :true do |f| %>
          <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="row" data-toggle="buttons">
              <% if @correction.action == "modification" %>
                  <%= label_tag("Modification", class: "btn btn-default active col-md-12 col-sm-12 col-xs-12 active", :style => "margin-top: 5px", disabled: :true) do %>
                      <%= f.radio_button(:action, "modification", :checked => "checked", :class => "required") %>
                      Modification
                  <% end %>
              <% elsif @correction.action == "suppression" %>
                  <%= label_tag("Suppression", class: "btn btn-default col-md-12 col-sm-12 col-xs-12 active", :style => "margin-top: 5px", disabled: :true) do %>
                      <%= f.radio_button(:action, "suppression", :checked => "checked", :class => "required") %>
                      Suppression
                  <% end %>
              <% elsif @correction.action == "insertion" %>
                  <%= label_tag("Insertion", class: "btn btn-default col-md-12 col-sm-12 col-xs-12 active", :style => "margin-top: 5px", disabled: :true) do %>
                      <%= f.radio_button(:action, "insertion", :checked => "checked", :class => "required") %> Insertion
                  <% end %>
              <% elsif @correction.action == "remplacement" %>
                  <%= label_tag("Remplacement", class: "btn btn-default col-lg-12 col-md-12 col-sm-12 col-xs-12 active", :style => "margin-top: 5px", disabled: :true) do %>
                      <%= f.radio_button(:action, "remplacement", :checked => "checked", :class => "required") %>
                      Remplacement
                  <% end %>
              <% elsif @correction.action == "commentaire" %>
                  <%= label_tag("Commentaire", class: "btn btn-default col-lg-12 col-md-12 col-sm-12 col-xs-12 active", :style => "margin-top: 5px", disabled: :true) do %>
                      <%= f.radio_button(:action, "commentaire", :checked => "checked", :class => "required") %>
                      Commentaire
                  <% end %>
              <% end %>
            </div>
          </div>
          <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
            <div class="row">
              <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-left" style="padding-left: 50px; padding-right: 50px">
                    <div class="row">
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                          <%= f.label "Texte avant correction" %>
                          <%= f.text_area :avant, class: "form-control", :style => "width: 250px;pointer: pointer", disabled: :true %>
                        </div>
                        <%= f.hidden_field :project_id, :value => @project.id %>
                        <%= f.hidden_field :user_correcteur_id, :value => current_user.id %>
                        <%= f.hidden_field :etat, :value => 0 %>
                        <div class="form-group">
                          <%= f.label "Correction demandée" %>
                          <%= f.text_area :demande, class: "form-control", :style => "height: 100px;width: 250px" %>
                        </div>
                        <!--Numero de page et le numero de ligne-->
                        <%= f.hidden_field :page, class: "form-control" %>
                        <%= f.hidden_field :ligne %>
                      </div>
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-top: 20px;">
                        <b>Etat:</b><br>
                        <%= label_tag("Attente", :style => "margin-top: 5px") do %>
                            <% if @correction.etat == "attente" %>
                                <%= f.radio_button(:etat, "attente", :checked => "checked", :class => "required") %>
                            <% else %>
                                <%= f.radio_button(:etat, "attente", :class => "required") %>
                            <% end %>
                            Attente
                        <% end %>
                        <br>
                        <%= label_tag("Corrige", :style => "margin-top: 5px") do %>
                            <% if @correction.etat == "corrige" %>
                                <%= f.radio_button(:etat, "corrige", :checked => "checked", :class => "required") %>
                            <% else %>
                                <%= f.radio_button(:etat, "corrige", :class => "required") %>
                            <% end %>
                            Corrigé
                        <% end %>
                        <br>
                        <%= label_tag("Verifie", :style => "margin-top: 5px") do %>
                            <% if @correction.etat == "verifie" %>
                                <%= f.radio_button(:etat, "verifie", :checked => "checked", :class => "required") %>
                            <% else %>
                                <%= f.radio_button(:etat, "verifie", :class => "required") %>
                            <% end %>
                            Verifié
                        <% end %>
                        <br>

                        <div class="form-group" style="margin-top: 45px;">
                          <%= f.label "Description" %>
                          <%= f.text_area :description, class: "form-control", :style => "height: 100px;width: 250px", disabled: :true %>
                        </div>
                      </div>
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                          <%= f.label "Commentaire" %>
                          <%= f.text_area :commentaires, class: "form-control", :style => "height: 100px;" %>
                        </div>
                        <div class="form-group text-right">
                          <%= f.submit "Valider", class: "btn btn-default" %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>